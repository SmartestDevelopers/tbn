generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model aboutsection {
  id        String   @id
  title     String
  content   String   @db.LongText
  imageUrl  String?
  updatedAt DateTime
}

model blogpost {
  id             String   @id
  slug           String   @unique(map: "BlogPost_slug_key")
  title          String
  excerpt        String   @db.Text
  content        String   @db.LongText
  coverImage     String?
  author         String   @default("The Global Notariat Team")
  category       String   @default("General")
  published      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  seoTitle       String?
  seoDescription String?  @db.Text
}

model contactmessage {
  id        String   @id
  name      String
  email     String
  subject   String?
  message   String   @db.LongText
  status    String   @default("new")
  createdAt DateTime @default(now())
}

model herosection {
  id         String   @id
  title      String
  subtitle   String
  buttonText String
  imageUrl   String?
  updatedAt  DateTime
}

model service {
  id          String   @id
  title       String
  description String   @db.Text
  icon        String?
  order       Int      @default(0)
  updatedAt   DateTime
  features    String?  @db.Text
  fullDesc    String?  @db.LongText
  slug        String   @unique(map: "Service_slug_key")
}

model sitesettings {
  id           String   @id
  siteName     String   @default("The Global Notariat")
  contactEmail String?
  contactPhone String?
  address      String?  @db.Text
  facebookUrl  String?
  twitterUrl   String?
  instagramUrl String?
  updatedAt    DateTime
}

model subscriber {
  id        String   @id
  email     String   @unique(map: "Subscriber_email_key")
  createdAt DateTime @default(now())
}

model user {
  id        String   @id
  name      String?
  email     String?  @unique(map: "User_email_key")
  password  String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime
}
